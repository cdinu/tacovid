{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["dom", "es5", "es2017"],
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "include": ["./src/**/*"]
}
